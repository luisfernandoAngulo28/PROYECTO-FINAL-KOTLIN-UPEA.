<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <View
            android:id="@+id/indicadorPrioridad"
            android:layout_width="6dp"
            android:layout_height="0dp"
            android:background="@color/prioridad_alta"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        
        <CheckBox
            android:id="@+id/checkBoxCompletada"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/indicadorPrioridad"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
        <TextView
            android:id="@+id/textoNombreTarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/texto_principal"
            android:text="@string/app_name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkBoxCompletada"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textoNivelPrioridad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/texto_secundario"
            android:text="Prioridad: Alta"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textoNombreTarea"
            app:layout_constraintStart_toEndOf="@+id/checkBoxCompletada"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textoFechaCreacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/texto_secundario"
            android:text="ðŸ“… Creado: 01/01/1966"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textoNivelPrioridad"
            app:layout_constraintStart_toEndOf="@+id/checkBoxCompletada"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textoFechaRecordatorio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/texto_secundario"
            android:text="â° Recordatorio: 01/01/1966"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textoFechaCreacion"
            app:layout_constraintStart_toEndOf="@+id/checkBoxCompletada"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/contenedorBotones"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textoFechaRecordatorio"
            app:layout_constraintStart_toEndOf="@+id/checkBoxCompletada"
            app:layout_constraintEnd_toEndOf="parent">
            <Button
                android:id="@+id/botonEditar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="âœï¸ Editar"
                android:textSize="13sp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/boton_editar"
                app:cornerRadius="20dp"/>
            <Button
                android:id="@+id/botonEliminar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="ðŸ—‘ï¸ Eliminar"
                android:textSize="13sp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/boton_eliminar"
                app:cornerRadius="20dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>